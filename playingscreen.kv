

#:import Animation kivy.animation.Animation
#:import SlideTransition kivy.uix.screenmanager.SlideTransition
#:import MyCamera corecamera.MyCamera
<PlayingScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:  
            orientation: 'vertical'
            Video:
                id: cameraplay
                size_hint: 1, 1
                resolution: (640, 480)
                on_touch_down: print(args[1])
                on_touch_up: print(args[1])
                x:0
                y:0
                source: '6.avi'
                state: "play"
        BoxLayout:
            orientation: 'vertical'
            ThemedButton:
                id: captureplay
                text: "Capture"
                #size_hint: .3, .07
                #pos_hint: {"top": .1, "center_x": .25}
                on_press:
                    root.captureplay() 
            ThemedButton:
                id:stats
                text:"none"
                #size_hint: .3, .07
                #pos_hint: {"top": .1, "center_x": .75}      
    FloatLayout:
        ThemedButton:
            id: playing_mode_selected
            size_hint: .4, .1
            pos_hint: {"top": .95, "center_x": .2}
            text: "[u]Change Mode[/u]"
            on_press:
                cameraplay.play=False
                root.parent.transition = SlideTransition(direction='right')
                root.parent.current = "select_mode_screen"