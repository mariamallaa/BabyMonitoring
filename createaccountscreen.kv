<CreateAccountScreen>:
    primary_color: utils.get_color_from_hex("#EE682A")
    secondary_color: utils.get_color_from_hex("#060809")
    tertiary_color: (.25, .25, .25, 1)
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: "logo3.jpg"
    FloatLayout:
        ThemedButton:
            size_hint: .3, .05
            pos_hint: {"center_x": .1, "top": .95}
            text: "[u]Back[/u]"
            on_release:
                root.parent.transition = SlideTransition(direction="right")
                root.parent.current = root.parent.current = "welcome_screen"
                root.parent.transition = SlideTransition(direction="left")

        ThemedInput:
            id: email
            size_hint: .6 ,.1
            pos_hint: {"center_x": .5, "top": .560}
            hint_text: "Email"

        ThemedInput:
            id: password
            size_hint: .6 ,.1
            pos_hint: {"center_x": .5, "top": .45}
            hint_text: "Password"
            password: True
            
        ThemedButton:
            text: "[u]Create Account[/u]"
            size_hint: .4 ,.05
            pos_hint: {"center_x": .5, "top": .3}
            
            on_release:
                # Need to refer to the FirebaseLoginScreen
                root.parent.parent.sign_up(email.text, password.text)
                Animation(opacity=0, duration=0.5).start(message)
                sign_in_button.opacity = 0
                sign_in_button.disabled = True
                root.parent.parent.display_loading_screen()

        ThemedMessage:
            id: message
            size_hint: .9 ,.1
            pos_hint: {"center_x": .5, "center_y": .1}
            opacity: 0
            
            on_text:
                Animation(opacity=1, duration=0.5).start(self)

        ThemedButton:
            id: sign_in_button
            text: "[u]Sign in[/u]"
            size_hint: .2 ,.05
            pos_hint: {"right": .85, "center_y": .1}
            opacity: 0
            disabled: True
            
            on_release:
                root.parent.current = "sign_in_screen"
                root.parent.parent.ids.sign_in_screen.ids.email.text = email.text
                root.parent.parent.ids.sign_in_screen.ids.password.text = password.text