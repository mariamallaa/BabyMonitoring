<cameraTest>:
    orientation: "vertical"
    Camera:
        id: camera
        size_hint_y: 18
        resolution: (1280, 720)
        on_touch_down: app.on_touch_down(args[1].pos)
        on_touch_up: app.on_touch_up(args[1].pos)
        
        play: True
        x:0
        y:0
        canvas.before:
            PushMatrix:
            Rotate:
                angle: 0
                origin: 0, 0
        canvas.after:
            PopMatrix:
    TextInput:
        text: "127.0.0.1:5000"
        id: ip_address
        size_hint_y: 1
    Button:
        id: capture
        text: "Capture"
        size_hint_y: 1
        on_press: app.capture()
    Button:
        id: cam_size
        text: "Configure Server"
        size_hint_y: 1
        on_press: app.cam_size()
    Button:
        id: stats
        text:"getstats"
        size_hint_y: 1
        on_press: app.getstat()
            

