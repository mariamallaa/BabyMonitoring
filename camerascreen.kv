#:import Animation kivy.animation.Animation
#:import SlideTransition kivy.uix.screenmanager.SlideTransition
#:import MyCamera corecamera.MyCamera
<CameraScreen>:

    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: "format.jpg"
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:  
            orientation: 'vertical'
            Video:
                id: camera
                size_hint: 1, 1
                resolution: (1920,1080)
                on_touch_down: print(args[1])
                on_touch_up: print(args[1])
                x:0
                y:0
                source: 'new.mp4'
                state: "play"
        BoxLayout:
            orientation: 'horizontal'
            padding: 10
            spacing:80
            ThemedButton:
                id: capture
                text: "Capture"
                size_hint: .2, .2
                pos_hint: {"top": .8, "center_x": .25}
                
                on_press:
                    root.capture() 
            ThemedButton:
                id:stats
                text:root.breathingrate
                size_hint: .2, .2
                pos_hint: {"top": .8, "center_x": .75}
                
