#:import Animation kivy.animation.Animation
#:import SlideTransition kivy.uix.screenmanager.SlideTransition

<CameraScreen>:
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: "logo4.jpeg"
    BoxLayout:
        orientation: 'vertical'
        Camera:
            id: camera
            resolution: (1280, 720)
            size_hint: 1, 1
            on_touch_down: self.on_touch_down(args[1].pos)
            on_touch_up: self.on_touch_up(args[1].pos)
            play: True
            x:0
            y:0
            canvas.before:
                PushMatrix
                Rotate:
                    angle: 270
                    origin: self.center
            canvas.after:
                PopMatrix       
        ThemedInput:
            text: "127.0.0.1:5000"
            id: ip_address
            size_hint: .4, .25
            pos_hint: {"top": .95, "center_x": .5}
        FloatLayout:
            ThemedButton:
                id: capture
                text: "Capture"
                size_hint: .28, .2
                pos_hint: {"top": .7, "center_x": .35}
            ThemedButton:
                id: cam_size
                text: "Configure Server"
                size_hint: .28 , .2
                pos_hint: {"top": .7, "center_x": .65}
                