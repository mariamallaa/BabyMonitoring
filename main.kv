#:include firebaseloginscreen.kv
#:include selectmodescreen.kv
#:import SelectModeScreen selectmodescreen.SelectModeScreen
#:import FirebaseLoginScreen firebaseloginscreen.FirebaseLoginScreen
#:include sleepingscreen.kv
#:include playingscreen.kv
#:include Camera.kv
#:import PlayingScreen playingscreen.PlayingScreen
#:import SleepingScreen sleepingscreen.SleepingScreen
#:import CameraScreen Camera.CameraScreen
#:import utils kivy.utils
ScreenManager:
    id:screen_manager
    FirebaseLoginScreen:
        id: firebase_login_screen
        name: "firebase_login_screen"
        web_api_key:  "AIzaSyD9YWmp6LF6b7d6OI0TQqn5exc4x1SuTuA" # Found in Firebase -> Project Settings -> Web API Key
        primary_color: utils.get_color_from_hex("#EE682A")
        secondary_color: utils.get_color_from_hex("#060809")
        tertiary_color: (.25, .25, .25, 1)
        on_login_success:
            # Defining this function lets you program what to do when the
            # user has logged in (probably you'll want to change screens)!
            # Get the important user info
            app.user_localId = self.localId
            app.user_idToken = self.idToken
            screen_manager.current =  "select_mode_screen"

    SelectModeScreen:
        id: select_mode_screen
        name: "select_mode_screen"

    PlayingScreen:
        id: playing_screen
        name: "playing_screen"
    SleepingScreen:
        id: sleeping_screen
        name:"sleeping_screen"
        on_age_right:
            screen_manager.current="Camera"
    CameraScreen:
        id: Camera
        name: "Camera"
        


